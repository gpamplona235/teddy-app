{
  "name": "teddyapp",
  "version": "0.6.2-beta",
  "description": "Teddy Software Windows e Linux",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win"
  },
  "author": "Ted",
  "license": "ISC",
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.seu.teddyapp",
    "productName": "TeddyApp Beta",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "TeddyApp.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "TeddyApp Beta"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Utility",
      "icon": "build/icons"
    }
  }
}